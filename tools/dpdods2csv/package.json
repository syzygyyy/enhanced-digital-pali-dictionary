{
  "name": "@digitalpalitools/dpdods2csv",
  "description": "Extract CSV from DPD ODS for further processing.",
  "version": "0.1.0",
  "author": "Digital Pāli Tools",
  "license": "CC BY-NC-SA 4.0",
  "homepage": ".",
  "scripts": {
    "f5build": "tsc",
    "start": "nodemon",
    "run": "cross-env TS_NODE_PROJECT=tsconfig.json node --max-old-space-size=8192 -r ts-node/register ./src/index.ts ods2csv",
    "build": "rimraf ./build && cross-env TS_NODE_PROJECT=tsconfig.json webpack --config webpack.config.ts",
    "lint": "eslint src",
    "test": "jest --colors --coverage",
    "test:watch": "jest --colors --coverage --watchAll"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "json2csv": "^5.0.6",
    "jszip": "^3.8.0",
    "lodash": "^4.17.21",
    "luxon": "^1.25.0",
    "winston": "^3.3.3",
    "xmldom": "^0.5.0",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/json2csv": "^5.0.1",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.25.0",
    "@types/node": "^13.7.1",
    "@types/webpack": "^4.41.25",
    "@types/xmldom": "^0.1.30",
    "@types/yargs": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": ">=10",
    "nodemon": "^1.19.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.2",
    "wasm-loader": "^1.3.0",
    "webpack": "4.44.2",
    "webpack-cli": "^4.2.0",
    "worker-loader": "^3.0.5"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "node -r ts-node/register ./src/index.ts ods2csv world"
  }
}
